@using fa18Team22.Controllers
@using fa18Team22.Models

@{
    ViewData["Title"] = "Reviews";
}

@*FONT*@
<style type="text/css">
    body {
        font-family: Georgia;
    }
</style>



<h2> Reviews Report Search Options </h2>


<p>
    <font color="red">
        @ViewBag.ConvertError
    </font>
</p>
<form asp-action="ReviewReport" asp-controller="Reports" method="get">

    
    @*Search by Price*@
    <div class="form-group">
        Accepted Minimum: @Html.TextBox("AcceptedMin", null, new { style = "width:50px" })
        Accepted Maximum: @Html.TextBox("AcceptedMax", null, new { style = "width:50px" })


            <div class="text-danger"> @ViewBag.Message </div>
    </div>
    <div>
        Rejected Minimum: @Html.TextBox("RejectedMin", null, new { style = "width:50px" })
        Rejected Maximum: @Html.TextBox("RejectedMax", null, new { style = "width:50px" })

    </div>



    Sort Option:
    <div class="form-group">
        <label class="radio">@Html.RadioButton("ReviewOption", ReviewOptions.EmpNum, true) Employee Email </label>
        <label class="radio">@Html.RadioButton("ReviewOption", ReviewOptions.Accept) Number of Accepted </label>
        <label class="radio">@Html.RadioButton("ReviewOption", ReviewOptions.Reject) Number of Rejected </label>

    </div>



    Sort By:
    <div class="form-group">
        <label class="radio">@Html.RadioButton("SortBy", SortReport.Ascending, true) Ascending </label>
        <label class="radio">@Html.RadioButton("SortBy", SortReport.Descending) Descending </label>

    </div>


    <p class="form-group">
        <button type="submit" asp-action="DisplayReviewReport" class="btn btn-secondary">Search</button>

    </p>



</form>

