@model fa18Team22.Models.Genre

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GenreName)
        </dd>
    </dl>
</div>
<div>
    <table class="table table-hover table-striped table-sm">
        <thead>
            <tr>
                <th>Books</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book cd in Model.Books)
            {
                <tr>
                    <td>@cd.Title</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GenreID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
