@*@model PagedList.IPagedList<fa18Team22.Models.Book>*@
@model IEnumerable<fa18Team22.Models.Book>
@using PagedList
@using PagedList.Mvc


<table class="table">         <thead>             <tr>                 <th>                     @Html.DisplayNameFor(model => model.Title)                 </th>                 <th>                     @Html.DisplayNameFor(model => model.Author)                 </th>                 <th>                     @Html.DisplayNameFor(model => model.AvgRating)                 </th>                 <th>                     @Html.DisplayNameFor(model => model.SalesPrice)                 </th>                 <th>                     @Html.DisplayNameFor(model => model.Inventory)                 </th>                 <th>                     @Html.DisplayNameFor(model => model.ReplenishMinimum)                 </th>                 <th>                     Quantity to Order                 </th>                 <th>                     Cost                 </th>                 <th></th>             </tr>         </thead>         <tbody>             @foreach (var item in Model)             {<tr>                     <td>                         @Html.DisplayFor(modelItem => item.Title)                     </td>                     <td>                         @Html.DisplayFor(modelItem => item.Author)                     </td>                     <td>                         @Html.DisplayFor(modelItem => item.AvgRating)                     </td>                     <td>                         @Html.DisplayFor(modelItem => item.SalesPrice)                     </td>                     <td>                         @Html.DisplayFor(modelItem => item.Inventory)                     </td>                     <td>                         @Html.DisplayFor(modelItem => item.ReplenishMinimum)                     </td>                     <td>                         @Html.TextBox("Quantity", 5, new { @class = "form-control" })                     </td>                     <td>                         @Html.TextBox("Cost", item.BookCost, new { @class = "form-control" })                     </td>                     <td>                         @*<a asp-controller="Procurement" asp-action="DeleteFromProcurementQuery" asp-route-id="@item.BookID">Delete From Order</a>*@                         @Html.ActionLink("Delete From Order", "DeleteFromProcurementQuery", "Procurement", new { id = item.BookID })                     </td>                  </tr>
               }     </tbody> </table>