@model IEnumerable<fa18Team22.Models.Book>

@{
    ViewData["Title"] = "Procurement";
}

@*FONT*@
<style type="text/css">
    body {
        font-family: Georgia;
    }
</style>

@*TABLE FORMAT*@
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 2px solid #ddd;
    }
</style>

<h2>Procurement</h2>
<form asp-action="Index" asp-controller="ProcurementSearch" method="get">
    <p class="form-group">
        @*Buttons to redirect to the Detailed Search and Buttons to Show All Books*@
        <a class="btn btn-primary" href="/ProcurementSearch/DetailedSearch">Detailed Search</a>
        @*TODO: Do we need to change href for this danger button the show all?*@
        <a class="btn btn-secondary" href="/ProcurementSearch/Index">Show All</a>
    </p>
</form>

<p>Displaying @ViewBag.SelectedBooksCount out of @ViewBag.TotalBooks Books </p>

<table class="table">
    <thead>
        <tr>
            <th>
                Include?
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvgRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReplenishMinimum)
            </th>
            <th>
                Quantity to Order
            </th>
            <th>
                Cost
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="IdsToAdd" value="@item.BookID" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookDetail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvgRating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inventory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReplenishMinimum)
                </td>
                <td>
                    @Html.TextBox("Quantity", 5, new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextBox("Cost", item.BookCost, new { @class = "form-control" })
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookID" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
