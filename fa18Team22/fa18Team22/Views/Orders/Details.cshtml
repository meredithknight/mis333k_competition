@model fa18Team22.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
</div>
<div>
    <h4>Orders</h4>
    <table class="table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Book Price</th>
                <th>Quantity</th>
                <!--<th>Total</th>-->
            </tr>
        </thead>
        <tbody>
            @foreach (OrderDetail rd in Model.OrderDetails)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => rd.Book.Title)</td>
                <td>@Html.DisplayFor(modelItem => rd.Price)</td>
                <td>@Html.DisplayFor(modelItem => rd.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => rd.Price)</td>
            </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
