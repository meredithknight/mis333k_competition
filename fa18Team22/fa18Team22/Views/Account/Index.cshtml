@model IndexViewModel
    @{
        ViewBag.Title = "Manage";
    }

    <h2>@ViewBag.Title.</h2>

    <div>
        <h4>Change your account settings</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>User Name:</dt>
            <dd>@Model.UserName</dd>

            <dt>Email:</dt>
            <dd>@Model.Email</dd>

            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>

            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>

            <dt>Address:</dt>
            <dd>@Model.Address</dd>

            <dt>City:</dt>
            <dd>@Model.City</dd>

            <dt>State:</dt>
            <dd>@Model.State</dd>

            <dt>Zip:</dt>
            <dd>@Model.Zip</dd>

            <dt>Phone Number:</dt>
            <dd>@Model.PhoneNumber</dd>

            <dt>Modify Account Information:</dt>
            @Html.ActionLink("Modify Account", "ModifyAccount", "Account", new { id = Model.Id })

            <dt>Password:</dt>
            <dd>
                [
                @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
        }
                ]

            </dd>
        </dl>


    </div>
    <hr />

