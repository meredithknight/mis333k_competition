<h2>Detailed Search</h2>
<form asp-action="SearchResults" asp-controller="Search" method="get">
    @*Title Text Box*@
    <div class="form-group">
        Title: @Html.TextBox("SearchTitle", null, new { @class = "form-control" })
    </div>
    @*Author Text Box*@
    <div class="form-group">
        Author: @Html.TextBox("SearchAuthor", null, new { @class = "form-control" })
    </div>
    @*Unique ID Search*@
    <div class="form-group">
        Unique Number: @Html.TextBox("SearchUniqueID", null, new { @class = "form-control" })
