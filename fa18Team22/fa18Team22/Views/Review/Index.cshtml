@model IEnumerable<fa18Team22.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h2>
    <span style="font-size: 3em; color: lightgrey;">
        <i class="far fa-thumbs-up"></i>    </span>
 Reviews </h2>


@*FONT*@
<style type="text/css">
    body {
        font-family: Georgia;
    }
</style>

@*TABLE FORMAT*@
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 2px solid #ddd;
    }
</style>



<h4>
    <span style="font-size: 3em; color: lightgrey;">
        <i class="fas fa-book"></i>
    </span>
Books Bought</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookDetail)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookDetail)
                </td>
                <td>
                    <a asp-controller="Review" asp-action="Create" asp-route-id="@item.BookID" class="btn btn-primary">Create a Review <i class="fas fa-star-half-alt"></i></a>
                    <a asp-controller="Review" asp-action="Details" asp-route-id="@item.BookID" class="btn btn-info">Details <i class="fas fa-list-ul"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
