@model fa18Team22.Models.Genre

@{
    ViewData["Title"] = "Details";
}

@*FONT*@
<style type="text/css">
    body {
        font-family: Georgia;
    }
</style>

<h2>
    <span style="font-size: 3em; color: lightgrey;">
        <i class="fas fa-list-ul"></i>
    </span>
Details</h2>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GenreName)
        </dd>
    </dl>
</div>
<div>
    <table class="table table-hover table-striped table-sm">
        <thead>
            <tr>
                <th>Books</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book cd in Model.Books)
            {
                <tr>
                    <td>@cd.Title</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GenreID">Edit <i class="fas fa-edit"></i></a> |
    <a asp-action="Index">Back to List <i class="fas fa-arrow-circle-left"></i></a>
</div>
