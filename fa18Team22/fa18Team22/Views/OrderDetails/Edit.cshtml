@model fa18Team22.Models.OrderDetail
@using fa18Team22.Models
@{
    ViewData["Title"] = "Edit";
}

@*FONT*@
<style type="text/css">
    body {
        font-family: Georgia;
    }
</style>

<h2>
    <span style="font-size: 3em; color: lightgrey;">
        <i class="fas fa-shopping-cart"></i>
    </span>

Edit Book</h2>

<!--<h4>OrderDetail</h4>-->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetailID" />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Book.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Book.Title) <!--WHY WONT THE BOOK TITLE FREAKING SHOW UP-->
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
                <p><font color="red">@ViewBag.QuantityError</font></p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save Changes <i class="far fa-save"></i></button>
                <p></p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Delete" asp-controller="OrderDetails" asp-route-id="@Model.OrderDetailID">Delete Book From Order <i class="fas fa-trash-alt"></i></a>
    <p></p>
    <a asp-action="ShoppingCart" asp-controller="Orders">Back to Shopping Cart <i class="fas fa-shopping-cart"></i></a>
</div>
