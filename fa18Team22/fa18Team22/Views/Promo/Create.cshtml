@model fa18Team22.Models.Promo

@{
    ViewData["Title"] = "Create";
}

@*FONT*@
<style type="text/css">
    body {
        font-family: Georgia;
    }
</style>



<h2>
     <span style="font-size: 3em; color: lightgrey;">
         <i class="fas fa-tag"></i>
    </span>
Create</h2>

<h4>Promo</h4>
<hr />

<p><font color="red">@ViewBag.PromoError</font></p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="radio">@Html.RadioButton("SelectedPromo", CouponType.Percent)  Percent Coupon </label>
                <label class="radio">@Html.RadioButton("SelectedPromo", CouponType.FreeShipping) Shipping Waiver  </label>

            </div>
            <div class="form-group">
                <label asp-for="PromoCode" class="control-label"></label>
                <input asp-for="PromoCode" class="form-control" />
                <span asp-validation-for="PromoCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountAmount" class="control-label"></label>
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumSpend" class="control-label"></label>
                <input asp-for="MinimumSpend" class="form-control" />
                <span asp-validation-for="MinimumSpend" class="text-danger"></span>
            </div>


            @*<div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                        </label>
                    </div>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

