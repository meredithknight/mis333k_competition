<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bevo Books</title>
    <link rel="shortcut icon" href="https://sportslogohistory-tvgu1jdkm2wvqi.netdna-ssl.com/wp-content/uploads/2018/02/texas_longhorns_1883-pres_a.png" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Browse Books", "Index", "Search", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Search", "DetailedSearch", "Search", null, new { @class = "nav-link" })
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Orders", "Index", "Orders", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Reviews", "Index", "Review", null, new { @class = "nav-link" })
                        </li>

                        if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Genres", "Index", "Genres", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Promo", "Index", "Promo", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Reports", "ChooseReport", "Reports", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Manage Users", "Index", "ManageUsers", null, new { @class = "nav-link" })
                            </li>
                        }

                        if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Genres", "Index", "Genres", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Promo", "Index", "Promo", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Reports", "ChooseReport", "Reports", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Manage Users", "Index", "ManageUsers", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Procurement", "Index", "Procurement", null, new { @class = "nav-link" })
                            </li>
                        }

                    }

                </ul>
            </div>
            @await Html.PartialAsync("_LoginPartial")
        </nav>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer align="center">
            <p>&copy; @DateTime.Now.Year - Bevo's Books</p>

            @if (User.IsInRole("Manager") != true && User.IsInRole("Employee") != true)
            {
            <p>
                <i class="fab fa-facebook-square"></i> Click <a href="https://www.facebook.com/Bevos-Bookstore-503270580166959/">here</a> to join us on Facebook!
            </p>
            <p>
                <i class="fab fa-twitter-square"></i> Click <a href="https://twitter.com/BevoBookstore">here</a> to join us on Twitter!
            </p>
            <p>
                <i class="fab fa-instagram"></i> Click <a href="https://www.instagram.com/bevosbookstorexv/">here</a> to join us on Instagram!
            </p>

            }

        </footer>
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
</body>
</html>